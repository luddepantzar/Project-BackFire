    <Page.Resources>


        <!--Ljus Vit färggggggggggggggggg-->
        <SolidColorBrush x:Key="BackgroundColor1" Color="#F7F7FF"/>
        <!--Ljus Blå färggggggggggggggggg-->

        <LinearGradientBrush x:Key="MenubarColor1" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF9E9E9E" Offset="0.475"/>
            <GradientStop Color="#279AF1" Offset="0.26"/>
        </LinearGradientBrush>

        <!--SVart färg -->

        <LinearGradientBrush x:Key="theme2a" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF808078" Offset="0.039"/>
            <GradientStop Color="#FF212120" Offset="0.434"/>
        </LinearGradientBrush>
        <!--Röd färg-->


        <LinearGradientBrush x:Key="theme2b" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF7A2525" Offset="0.199"/>
            <GradientStop Color="#FFEE1B1B" Offset="0.925"/>
        </LinearGradientBrush>

        <!--Ljus Vit färg-->
        <SolidColorBrush x:Key="BackgroundColor3" Color="#011627"/>
        <!--Ljus Blå färg-->
        <SolidColorBrush x:Key="MenubarColor3" Color="#FF0022" />

        <!--Default färg KLAR-->

        <LinearGradientBrush x:Key="theme3a" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFACACAC" Offset="0.096"/>
            <GradientStop Color="#FF363636" Offset="0.932"/>
        </LinearGradientBrush>


        <!--Default färg KLAR-->

        <LinearGradientBrush x:Key="theme3b" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFD1D1D1" Offset="0.046"/>
            <GradientStop Color="#FF6A6A69" Offset="0.48"/>
        </LinearGradientBrush>


        <SolidColorBrush x:Key="yellow" Color="Yellow"/>

        <SolidColorBrush x:Key="green" Color="Green"/>

        <SolidColorBrush x:Key="red" Color="Red"/>
        <Storyboard x:Name="anim">

            <DoubleAnimation  Storyboard.TargetName="grid7" Storyboard.TargetProperty="Opacity" From="100" To="0" Duration="0:0:5"
                                             EnableDependentAnimation="True"/>
        </Storyboard>

    </Page.Resources>
    <Grid x:Name="ContentArea" 
               Margin="{StaticResource MediumLeftRightMargin}"  Height="Auto" Width="Auto" BorderBrush="Black" PointerMoved="OnPointerMoved">
        
        <Grid.Background>

            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFACACAC" Offset="0.096"/>
                <GradientStop Color="#FF363636" Offset="0.932"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleRow"/>
        </Grid.RowDefinitions>

        <Grid x:Name="MenuBar" Margin="0,0,0,-158" BorderThickness="0,0,0,6" VerticalAlignment="Top" Height="145" FocusVisualPrimaryBrush="{x:Null}" BorderBrush="#FF323030">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD1D1D1" Offset="0.046"/>
                    <GradientStop Color="#FF6A6A69" Offset="0.48"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Image Margin="10,10,0,26" Source="ms-appx:///Images/test_logo.png" RenderTransformOrigin="0.536,0.781" HorizontalAlignment="Left" Width="473" MinWidth="100" FocusVisualSecondaryBrush="{x:Null}">
                <Image.FocusVisualPrimaryBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Image.FocusVisualPrimaryBrush>
            </Image>
            <Button x:Name="btn1" Content="Button" HorizontalAlignment="Left" Margin="855,78,0,35" VerticalAlignment="Stretch" RenderTransformOrigin="0.508,0.375" Click="btn1_Click"/>
            <TextBlock x:Name="TodaysDate" Margin="0,78,30,14" Text="" TextWrapping="Wrap" FontSize="20" Foreground="Black" HorizontalAlignment="Right" Width="Auto"  FocusVisualPrimaryBrush="Black"/>
            <TextBlock x:Name="TimeDate" Margin="0,10,15,58" TextWrapping="Wrap" FontSize="60"  Foreground="Black" HorizontalAlignment="Right" Width="Auto"     FocusVisualPrimaryBrush="Black"/>

        </Grid>
        <Grid Margin="140,280,140,160" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image x:Name="Imgbox1" Margin="20,20,24,20" Grid.Row="1" Source="ms-appx:///Images/Konferens.jpg" Stretch="Fill">
