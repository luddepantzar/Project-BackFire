        <Button x:Name="SettingsButton" Margin="1748,431,0,-492" Width="103" Height="80" Visibility="Collapsed" >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Images/kugghjul.png"/>
            </Button.Background>
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutSubItem Text="API Settings">
                        <MenuFlyoutItem/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem x:Name="ThemeMenu" Text="Tema">
                        <MenuFlyoutItem x:Name="color1" Text="1" Click="color1_Click"/>
                        <MenuFlyoutItem x:Name="color2" Text="2" Click="color2_Click"/>
                        <MenuFlyoutItem x:Name="color3" Text="3" Click="color3_Click"/>
                        <MenuFlyoutItem x:Name="colordefault" Text="Default" Click="colordefault_Click"/>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Tid">
                        <MenuFlyoutItem x:Name="Bighours" Text="24hr"/>
                        <MenuFlyoutItem x:Name="Smallhours" Text="12hr"/>
                    </MenuFlyoutSubItem>
                </MenuFlyout>
            </Button.Flyout>
